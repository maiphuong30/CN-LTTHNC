<div class="container">
    <div class="album py-5 bg-light">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" id="sp" width="100" height="310" src="../images/<%- sanpham.Image %>" />
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="tensp">
                            <p>Tên Sản Phẩm: <%- sanpham.Name %>
                            </p>
                        </h5>
                        <h5>
                            <p>Giá: <%- sanpham.Cost %>
                            </p>
                        </h5>
                        <form class="horizontal-form">
                            <div class="form-group">
                            </div>
                            <div class="form-group">
                                <label class="label-control col-xs-3 col-sm-3 col-md-3 col-lg-3" for="tinhtrang">Tình
                                    trạng</label>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                    <input type="text" id="tt" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="label-control col-xs-3 col-sm-3 col-md-3 col-lg-3" for="soluong"
                                    id="sl">Số
                                    lượng</label>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 d-flex">
                                    <input type="number" style="border-radius: 5px; border: 2px solid #000;" name=""
                                        min="0" placeholder="0">
                                    <button type="button" class="btn btn-info ml-2" data-toggle="modal"
                                        data-target="#myModal">Xem Review</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<div class="modal " style="margin-top:100px;" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <pre style="white-space: pre-wrap;"><%- sanpham.Mota %></pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>