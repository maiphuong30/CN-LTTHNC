                                    <path fill-rule="evenodd"
                                        d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </section>
            <div class="album py-5 bg-light">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" id="sp" width="100" height="310" src="../images/sp1.jpg" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <h5 class="tensp">ten san pham</h5>
                                <h5>gia o day </h5>
                                <form class="horizontal-form">
                                    <div class="form-group">
                                    </div>
                                    <div class="form-group">
                                        <label class="label-control col-xs-3 col-sm-3 col-md-3 col-lg-3"
                                            for="tinhtrang">Tình trạng</label>
                                        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                            <input type="text" id="tt" class="form-control" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="label-control col-xs-3 col-sm-3 col-md-3 col-lg-3" for="soluong"
                                            id="sl">Số lượng</label>
                                        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                            <input type="number" name="" min="0" placeholder="0">
                                        </div>
                                    </div>
                                    <button class="btn btn-outline-success mb-4 ml-3">
                                        Thêm vào giỏ hàng
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">mo ta o day bla bla bla</p>
                </div>
        </main>
        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <%- include('../layouts/footer'); %>
        </footer>
    </div>
</body>

</html>