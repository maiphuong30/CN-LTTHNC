<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Danh sách thông tin sản phẩm
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        
        <a href="add"><button type="button" class="btn btn-sm btn-outline-secondary">
                Add new
            </button></a>
    </div>
</div>
<% danhsach.forEach(function(dm){ %>
<div class="table-responsive border-bottom">  
    <h3 class="h3"><%- dm.Title %></h3> 
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Sửa</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        <% dm.DSSP.forEach(function(sp){ %>
            <tr>
                <td>
                    <%- sp.Name %>
                </td>
                <td><%- sp.Cost %></td>
                <td><a href="edit/<%- sp._id %>">
                    <i class="bi bi-pencil-square"  style="color:blue;"></i></a></td>
                <td><a onclick="return confirm('Bạn có chắc chắn muốn xóa <%- sp.Name %>?')" href="delete/<%- sp._id %>"><i class="bi bi-trash" style="color: red;"></i></a></td>
            </tr>
            <% }); %>
    </tbody>
</table>
</div>
<% }); %>